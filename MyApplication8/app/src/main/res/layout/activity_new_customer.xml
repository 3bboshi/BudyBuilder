<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.amahl.myapplication.NewCustomer">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btu_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="93dp"
            android:text="Save" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText4"
            android:ems="10"
            android:hint="Amount KD.  "
            android:inputType="number"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/DateNewCusttxt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText5"
            android:ems="10"
            android:hint="ToDayDate"
            android:inputType="text"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txtTodate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btutodate"
            android:layout_toEndOf="@+id/btutodate"
            android:ems="10"
            android:inputType="text"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/InvoiceNo"
            android:layout_width="@dimen/EditText_Width"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtTodate"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Invoice Number"
            android:inputType="text"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="@dimen/EditText_Width"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText3"
            android:ems="10"
            android:hint="Remark , if any : "
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/Ename"
            android:layout_width="@dimen/EditText_Width"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Name"

            android:inputType="textPersonName"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="@dimen/EditText_Width"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Ename"
            android:ems="10"
            android:hint="Mobile No. "
            android:inputType="number"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btuCamera"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"

            android:layout_below="@+id/editText4"
            android:onClick="captch"
            android:text="Photo"
            android:textSize="13sp"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/btutodate"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/DateNewCusttxt"
            android:text="To Date"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/PhotoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btuCamera"
            android:layout_below="@+id/btuCamera"
            android:text="photoID"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="22dp"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:text="Fill Customer Information :"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView">

    </RelativeLayout>


</RelativeLayout>
