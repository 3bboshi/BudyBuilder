<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imgview"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:padding="1dp"
        android:text="number" />


    <TextView
        android:id="@+id/custname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginStart="65dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="name" />

    <TextView
        android:id="@+id/custmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/custname"
        android:layout_below="@+id/custname"
        android:layout_marginTop="5dp"
        android:text="mobile" />

    <TextView
        android:id="@+id/custendcontract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/custmobile"
        android:layout_below="@+id/custmobile"
        android:layout_marginTop="5dp"
        android:text="End contract" />

    <TextView
        android:id="@+id/custremark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/custendcontract"
        android:layout_below="@+id/custendcontract"
        android:layout_marginTop="5dp"
        android:text="remark" />

    <ImageView
        android:id="@+id/imgview"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/custmobile"
        android:layout_marginStart="15dp"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>